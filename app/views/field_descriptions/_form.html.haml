= simple_form_for @field_description, :html => { :class => 'form-horizontal' } do |f|
  = f.input :TableName
  = f.input :FieldName
  = f.input :FieldDescription, as: :text, :input_html => {:rows => 10}
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), field_descriptions_path, :class => 'btn'
