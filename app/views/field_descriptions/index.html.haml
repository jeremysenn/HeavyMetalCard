- model_class = FieldDescription
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:TableName)
      %th= model_class.human_attribute_name(:FieldName)
      %th= model_class.human_attribute_name(:FieldDescription)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @field_descriptions.each do |field_description|
      %tr
        %td= field_description.TableName
        %td= field_description.FieldName
        %td= field_description.FieldDescription
        %td
          =# link_to 'Show', field_description, :class => 'btn btn-mini btn-success'
          =# link_to t('.edit', :default => t("helpers.links.edit")), edit_field_description_path(field_description), :class => 'btn btn-mini'
          =# link_to t('.destroy', :default => t("helpers.links.destroy")), field_description_path(field_description#), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_field_description_path, :class => 'btn btn-primary'